= javascript_include_tag "scheduler"

- content_for :page_heading, "Scheduler - #{Semester.current.to_s}"
.scheduler-container
  .row
    #search.col-xs-12
      .input-group
        input.form-control#class-search name="class-search" type="text" placeholder="Search for a course... ex. ECON 2010 or Biology"
        span.input-group-addon
          .btn.btn-xs.glyphicon.glyphicon-search#search-classes
    /#gen.col-xs-1
    /  .btn.btn-primary#generate-schedules Generate
    /#genopt.col-xs-2
    /  .btn.btn-primary#generate-options Generate with Options
  .row
    #search-bar.col-xs-3
      h4#results-title Selected Courses
      #results-box
      .row.row-no-padding#search-footer
        .col-md-3
        .col-md-5
          #credits 0 credits
      .row
        #prefs-col.col-md-12
          #prefs.dropdown
            button.btn.btn-primary.dropdown-toggle data-toggle="dropdown" Schedule Filters
            ul.dropdown-menu.col-xs-12
              li
                input.check type="checkbox" id="mornings"
                span  No morning classes (before 10am)
              li
                input.check type="checkbox" id="evenings"
                span  No evening classes (after 5pm)
              li
                input.check type="checkbox" id="thirst"
                span  No Thur night or Fri classes
	  .row
	    #share-col.col-md-12
		  #share.dropdown
		    button.btn.btn-primary#share-btn Share Schedule
	  .row
	    #share-link-col.col-md-12
		  div#share-link-div.noshow
		    input#share-link readonly=true
	  .row
	    #share-link-copied-col.col-md-12
		  div#share-link-copied.noshow-copied
			|
			  Link copied to clipboard!
        
    #calendar.col-xs-9
      /   .col-md-6.pull-right
      /     .btn-group.pull-right#scheduler-buttons role="group"
      /       button.btn.btn-default#save-schedule-dialog
      /         span Save 
      /         .glyphicon.glyphicon-floppy-disk 
      /       button.btn.btn-default#load-schedules
      /         span Load 
      /         .glyphicon.glyphicon-open
      /       button.btn.btn-default#export-schedule 
      /         span Export to iCal 
      /         .glyphicon.glyphicon-calendar 
      #schedule-options
        ul#tabUl
      #schedule
    
        

    .course-result.hidden
      #checkbox
        input type= "checkbox"
      #content
        a.remove
        p.course-mnemonic
        p.course-title
      

  -# modals rendered in application.html.slim